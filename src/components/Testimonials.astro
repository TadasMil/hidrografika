---
import { siteConfig } from '../data/site';

const { testimonials } = siteConfig;
---

<section class="py-16 bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Ką Sako Mūsų Klientai</h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Tikri atsiliepimai iš patenkintų klientų
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map(testimonial => (
        <article class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-cyan-500/50 transition-all">
          <!-- Stars -->
          <div class="flex mb-4" aria-label={`${testimonial.rating} star rating`}>
            {Array.from({ length: testimonial.rating }).map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-gray-300 mb-6 leading-relaxed">
            "{testimonial.text}"
          </blockquote>

          <!-- Author -->
          <div class="border-t border-gray-700 pt-4">
            <cite class="not-italic">
              <p class="font-semibold text-white">{testimonial.name}</p>
              <p class="text-sm text-gray-500">{testimonial.location}</p>
              <p class="text-sm text-cyan-400 mt-1">{testimonial.project}</p>
            </cite>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
