---
import { siteConfig } from "../data/site";

const { services } = siteConfig;
---

<section class="py-16 bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Mūsų Paslaugos
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Profesionali hidrografika kiekvienam pritaikymui
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        services.map((service, index) => (
          <a
            href={`/gallery#${service.id}`}
            class="service-card opacity-0 translate-y-[50px] bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-cyan-500 transition-colors duration-300 group block focus:ring-2 focus:ring-cyan-500 focus:outline-none"
            data-service-index={index}
            aria-label={`Peržiūrėti ${service.name} galerijos pavyzdžius`}
          >
            <div class="text-4xl mb-4 transition-transform duration-300 group-hover:scale-110 group-hover:rotate-6">
              {service.icon}
            </div>

            <h3 class="text-xl font-bold text-white mb-3 transition-all duration-300 group-hover:text-cyan-400 group-hover:scale-105 transform inline-block origin-left">
              {service.name}
            </h3>
            <p class="text-gray-400 text-sm mb-4 leading-relaxed">
              {service.description}
            </p>
            <ul class="space-y-2 mb-4">
              {service.features.slice(0, 3).map((feature) => (
                <li class="text-sm text-gray-500 flex items-start">
                  <svg
                    class="w-4 h-4 text-cyan-500 mt-0.5 mr-2 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            {service.price && (
              <p class="text-cyan-400 font-semibold text-sm">{service.price}</p>
            )}
            <div class="mt-4 pt-3 border-t border-gray-700 opacity-60 group-hover:opacity-100 transition-opacity">
              <div class="flex items-center text-xs text-cyan-400">
                <span>Peržiūrėti galerijos pavyzdžius</span>
                <svg
                  class="ml-1 w-3 h-3 transition-transform group-hover:translate-x-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="text-center mt-24">
      <a
        href="/services"
        class="inline-flex items-center px-6 py-3 bg-gray-800 text-white font-semibold rounded-lg hover:bg-gray-700 transition-colors border border-gray-700"
      >
        Peržiūrėti Visas Paslaugas
        <svg
          class="ml-2 w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .service-card {
    opacity: 0;
    transform: translateY(50px); /* start below -> moves up */
    will-change: transform, opacity;
    text-decoration: none; /* Remove underline from links */
  }

  .service-card:hover {
    transform: translateY(-2px);
  }

  @media (prefers-reduced-motion: reduce) {
    .service-card {
      opacity: 1 !important;
      transform: none !important;
    }

    .service-card:hover {
      transform: none !important;
    }
  }
</style>

<script>
  import { inView, animate } from "motion";

  const cards = Array.from(document.querySelectorAll(".service-card"));

  cards.forEach((card, i) => {
    inView(
      card,
      () => {
        animate(
          card,
          { opacity: [0, 1], y: [50, 0] },
          {
            duration: 0.6,
            ease: [0.22, 1, 0.36, 1],
            delay: 0.2 + i * 0.1,
          },
        );
      },
      { amount: "some" },
    );
  });
</script>
