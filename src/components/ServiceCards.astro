---
import { siteConfig } from '../data/site';

const { services } = siteConfig;
---

<section class="py-16 bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Our Services</h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Professional hydrographics for every application
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map(service => (
        <article class="bg-gray-800 rounded-lg p-6 border border-gray-700 hover:border-cyan-500 transition-all hover:shadow-lg hover:shadow-cyan-500/20 group">
          <div class="text-4xl mb-4 group-hover:scale-110 transition-transform">{service.icon}</div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
            {service.name}
          </h3>
          <p class="text-gray-400 text-sm mb-4 leading-relaxed">
            {service.description}
          </p>
          <ul class="space-y-2 mb-4">
            {service.features.slice(0, 3).map(feature => (
              <li class="text-sm text-gray-500 flex items-start">
                <svg class="w-4 h-4 text-cyan-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          {service.price && (
            <p class="text-cyan-400 font-semibold text-sm">{service.price}</p>
          )}
        </article>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/services"
        class="inline-flex items-center px-6 py-3 bg-gray-800 text-white font-semibold rounded-lg hover:bg-gray-700 transition-colors border border-gray-700"
      >
        View All Services
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
