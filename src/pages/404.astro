---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../data/site';
---

<Layout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <section class="py-20 md:py-32 bg-gradient-to-br from-gray-900 via-gray-800 to-cyan-900 min-h-screen flex items-center">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto text-center">
        <!-- 404 Number -->
        <div class="mb-8">
          <h1 class="text-9xl md:text-[200px] font-bold text-cyan-500 opacity-20 leading-none">
            404
          </h1>
        </div>

        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Page Not Found
        </h2>

        <p class="text-xl text-gray-300 mb-12 leading-relaxed">
          Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or never existed in the first place.
        </p>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <a
            href="/"
            class="inline-flex items-center justify-center px-8 py-4 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-600 transition-all shadow-lg shadow-cyan-500/30"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Go Home
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 bg-gray-800 text-white font-semibold rounded-lg hover:bg-gray-700 transition-all border border-gray-700"
          >
            Contact Us
          </a>
        </div>

        <!-- Quick Links -->
        <div class="bg-gray-900 rounded-lg p-8 border border-gray-800">
          <h3 class="text-xl font-semibold text-white mb-6">Popular Pages</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a
              href="/services"
              class="p-4 bg-gray-800 rounded-lg text-gray-300 hover:text-cyan-400 hover:bg-gray-750 transition-all border border-gray-700"
            >
              Services
            </a>
            <a
              href="/gallery"
              class="p-4 bg-gray-800 rounded-lg text-gray-300 hover:text-cyan-400 hover:bg-gray-750 transition-all border border-gray-700"
            >
              Gallery
            </a>
            <a
              href="/pricing"
              class="p-4 bg-gray-800 rounded-lg text-gray-300 hover:text-cyan-400 hover:bg-gray-750 transition-all border border-gray-700"
            >
              Pricing
            </a>
            <a
              href="/faq"
              class="p-4 bg-gray-800 rounded-lg text-gray-300 hover:text-cyan-400 hover:bg-gray-750 transition-all border border-gray-700"
            >
              FAQ
            </a>
          </div>
        </div>

        <!-- Help Section -->
        <div class="mt-12 pt-8 border-t border-gray-700">
          <p class="text-gray-400 mb-4">Need help? We're here for you.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center text-sm">
            <a href={`tel:${siteConfig.phone}`} class="text-cyan-400 hover:text-cyan-300 transition-colors">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {siteConfig.phone}
            </a>
            <span class="hidden sm:inline text-gray-700">â€¢</span>
            <a href={`mailto:${siteConfig.email}`} class="text-cyan-400 hover:text-cyan-300 transition-colors">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {siteConfig.email}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
