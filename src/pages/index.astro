---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCards from '../components/ServiceCards.astro';
import ProcessSteps from '../components/ProcessSteps.astro';
import Testimonials from '../components/Testimonials.astro';
import { siteConfig } from '../data/site';
---

<Layout
  title={`${siteConfig.brandName} - ${siteConfig.tagline}`}
  description={siteConfig.description}
>
  <Hero
    title="Paversk Savo Viziją Realybe"
    subtitle="Profesionalus vandens pernešimo spausdinimas automobiliams, ginklams, sportinėms prekėms ir individualūs projektai. Aukščiausios kokybės apdailos, kurios išlieka."
  />

  <ServiceCards />

  <ProcessSteps />

  <Testimonials />

  <!-- Stats Section with Counter Animation -->
  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="stat-item">
          <div class="text-4xl md:text-5xl font-bold text-cyan-400 mb-2" data-count="5000">0+</div>
          <p class="text-gray-400">Įvykdytų Projektų</p>
        </div>
        <div class="stat-item">
          <div class="text-4xl md:text-5xl font-bold text-cyan-400 mb-2" data-count="10">0+</div>
          <p class="text-gray-400">Metų Patirtis</p>
        </div>
        <div class="stat-item">
          <div class="text-4xl md:text-5xl font-bold text-cyan-400 mb-2" data-count="500">0+</div>
          <p class="text-gray-400">Prieinamų Raštų</p>
        </div>
        <div class="stat-item">
          <div class="text-4xl md:text-5xl font-bold text-cyan-400 mb-2" data-count="98">0%</div>
          <p class="text-gray-400">Klientų Pasitenkinimas</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-cyan-900 to-gray-900 relative overflow-hidden cta-section">
    <!-- Animated background elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-72 h-72 bg-cyan-500 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-10 right-10 w-96 h-96 bg-blue-500 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 cta-title">
        Pasiruošę Pradėti Savo Projektą?
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto cta-subtitle">
        Susisiekite su mumis šiandien dėl nemokamos konsultacijos ir kainos pasiūlymo. Padėsime pasirinkti tobulą raštą ir apdailą jūsų projektui.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center cta-buttons">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-cyan-900 font-semibold rounded-lg hover:bg-gray-100 hover:scale-105 transition-all shadow-lg text-lg group"
        >
          Gaukite Nemokamą Pasiūlymą
          <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <a
          href={`tel:${siteConfig.phone}`}
          class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-semibold rounded-lg border-2 border-white hover:bg-white hover:text-cyan-900 hover:scale-105 transition-all text-lg"
        >
          {siteConfig.phone}
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  import { inView, animate } from 'motion';

  // Counter animation function
  function animateCounter(element: Element) {
    const target = element.querySelector('[data-count]');
    if (!target || target.classList.contains('counted')) return;

    target.classList.add('counted');
    const countTo = parseInt(target.getAttribute('data-count') || '0');
    const suffix = target.textContent?.includes('%') ? '%' : '+';
    const duration = 2000;
    const increment = countTo / (duration / 16);
    let current = 0;

    const updateCounter = () => {
      current += increment;
      if (current < countTo) {
        target.textContent = Math.floor(current) + suffix;
        requestAnimationFrame(updateCounter);
      } else {
        target.textContent = countTo + suffix;
      }
    };

    updateCounter();
  }

  function initIndexAnimations() {
    // Animate stat items
    const statItems = document.querySelectorAll('.stat-item');
    statItems.forEach((item, index) => {
      const element = item as HTMLElement;

      // Set initial state
      element.style.opacity = '0';
      element.style.transform = 'translateY(30px) scale(0.9)';

      inView(
        element,
        () => {
          // Fade in and scale up
          animate(
            element,
            {
              opacity: 1,
              transform: 'translateY(0px) scale(1)'
            } as any,
            {
              duration: 0.6,
              delay: index * 0.1,
              easing: [0.22, 1, 0.36, 1]
            } as any
          );
          // Start counter animation
          animateCounter(element);
        },
        { amount: 0.3 }
      );
    });

    // Animate CTA section elements
    const ctaTitle = document.querySelector('.cta-title');
    const ctaSubtitle = document.querySelector('.cta-subtitle');
    const ctaButtons = document.querySelector('.cta-buttons');

    if (ctaTitle) {
      (ctaTitle as HTMLElement).style.opacity = '0';
      (ctaTitle as HTMLElement).style.transform = 'translateY(30px)';
    }
    if (ctaSubtitle) {
      (ctaSubtitle as HTMLElement).style.opacity = '0';
      (ctaSubtitle as HTMLElement).style.transform = 'translateY(30px)';
    }
    if (ctaButtons) {
      (ctaButtons as HTMLElement).style.opacity = '0';
      (ctaButtons as HTMLElement).style.transform = 'translateY(30px)';
    }

    const ctaSection = document.querySelector('.cta-section');
    if (ctaSection) {
      inView(
        ctaSection,
        () => {
          if (ctaTitle) {
            animate(
              ctaTitle,
              { opacity: 1, transform: 'translateY(0px)' } as any,
              { duration: 0.8, easing: [0.22, 1, 0.36, 1] } as any
            );
          }
          if (ctaSubtitle) {
            animate(
              ctaSubtitle,
              { opacity: 1, transform: 'translateY(0px)' } as any,
              { duration: 0.8, delay: 0.2, easing: [0.22, 1, 0.36, 1] } as any
            );
          }
          if (ctaButtons) {
            animate(
              ctaButtons,
              { opacity: 1, transform: 'translateY(0px)' } as any,
              { duration: 0.8, delay: 0.4, easing: [0.22, 1, 0.36, 1] } as any
            );
          }
        },
        { amount: 0.3 }
      );
    }
  }

  // Initialize on page load
  document.addEventListener('astro:page-load', initIndexAnimations);

  // Also initialize immediately if already loaded
  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    initIndexAnimations();
  }
</script>
