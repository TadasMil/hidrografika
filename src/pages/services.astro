---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import { siteConfig } from '../data/site';
---

<Layout
  title="Our Services"
  description="Professional hydrographics services for automotive, firearms, sporting goods, and custom projects. Expert water transfer printing with premium finishes."
  structuredDataType="service"
>
  <Hero
    title="Professional Hydrographics Services"
    subtitle="Expert water transfer printing for every application"
    compact
  />

  <section class="py-16 bg-gray-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {siteConfig.services.map((service, index) => (
          <article class="max-w-5xl mx-auto">
            <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} gap-8 items-center`}>
              <!-- Icon/Visual -->
              <div class="flex-shrink-0 w-full lg:w-1/3">
                <div class="bg-gradient-to-br from-cyan-900 to-gray-900 rounded-lg p-12 text-center border border-gray-800">
                  <div class="text-8xl mb-4">{service.icon}</div>
                  {service.price && (
                    <p class="text-2xl font-bold text-cyan-400">{service.price}</p>
                  )}
                </div>
              </div>

              <!-- Content -->
              <div class="flex-1">
                <h2 class="text-3xl font-bold text-white mb-4">{service.name}</h2>
                <p class="text-gray-400 text-lg mb-6 leading-relaxed">
                  {service.description}
                </p>

                <h3 class="text-xl font-semibold text-white mb-3">Services Include:</h3>
                <ul class="space-y-2 mb-6">
                  {service.features.map(feature => (
                    <li class="flex items-start text-gray-300">
                      <svg class="w-6 h-6 text-cyan-500 mr-3 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>

                <a
                  href="/contact"
                  class="inline-flex items-center px-6 py-3 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-600 transition-all shadow-lg shadow-cyan-500/30"
                >
                  Request Quote
                  <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
            {index < siteConfig.services.length - 1 && (
              <hr class="border-gray-800 mt-16" />
            )}
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Not Sure Which Service You Need?</h2>
      <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Contact us for a free consultation. We'll help you determine the best approach for your project.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center px-8 py-4 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-600 transition-all shadow-lg shadow-cyan-500/30"
      >
        Get Expert Advice
      </a>
    </div>
  </section>
</Layout>
